
{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2017"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "strict": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "baseUrl": "./src/",
    "noImplicitAny": true,
    "paths": {
      "@screens": ["screens"],
      "@router": ["router"],
      "@assets": ["assets"],
      "@components": ["components"],
      "@graphql": ["graphql"],
      "@colors": ["colors"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_modules", "babel.config.js", "metro.config.js", "jest.config.js"
  ]
}
